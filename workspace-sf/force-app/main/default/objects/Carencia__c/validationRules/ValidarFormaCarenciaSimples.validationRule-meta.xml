<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidarFormaCarenciaSimples</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISPICKVAL(FormaCarencia__c, &apos;Simples&apos;),
    ISBLANK(InicioPeriodo__c)
)</errorConditionFormula>
    <errorMessage>Preencha o início do período para a forma de carência Simples</errorMessage>
</ValidationRule>
