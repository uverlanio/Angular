<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ObrigarPreenchimentoVariavel</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(ModeloRemuneracao__c,&apos;Percentual&apos;),
    ISPICKVAL(Variavel__c,&apos;&apos;)
)</errorConditionFormula>
    <errorMessage>O campo variável é obrigatório para este modelo de remuneração</errorMessage>
</ValidationRule>
