<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidarMomentoProtocolo</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(MomentoRemuneracao__c,&apos;Protocolo&apos;),
    ISPICKVAL(Parcelamento__c,&apos;Recebimento do prêmio&apos;)
)</errorConditionFormula>
    <errorMessage>Opção de parcelamento inválida para o momento de remuneração escolhido</errorMessage>
</ValidationRule>
