<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ImpedeAlterarGarantiaObrigatoria</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
        ISCHANGED(GarantiaProduto__c  ),
        PRIORVALUE( Obrigatoria__c ))</errorConditionFormula>
    <errorDisplayField>GarantiaProduto__c</errorDisplayField>
    <errorMessage>Garantia obrigatória não pode ser alterada.</errorMessage>
</ValidationRule>
