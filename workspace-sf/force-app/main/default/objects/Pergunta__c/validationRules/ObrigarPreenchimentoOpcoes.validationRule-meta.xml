<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ObrigarPreenchimentoOpcoes</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(TipoResposta__c, &apos;Opção&apos;),
    ISBLANK(OpcoesResposta__c)
)</errorConditionFormula>
    <errorDisplayField>OpcoesResposta__c</errorDisplayField>
    <errorMessage>Preencha as opções de resposta no campo Opções de lista.</errorMessage>
</ValidationRule>
