<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreencherObservacaoCancelado</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Status__c, &apos;Cancelado&apos;),
  ISBLANK( Observacao__c )
)</errorConditionFormula>
    <errorMessage>É obrigatório o preenchimento do campo &quot;Observação&quot; quando o status do beneficiário da garantia for &quot;Cancelado&quot;.</errorMessage>
</ValidationRule>
