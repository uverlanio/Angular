<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidarPreenchimentoJustificativa</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   NOT(ISPICKVAL(Status__c, &apos;Pendente&apos;)), 
   ISBLANK( Justificativa__c)
)</errorConditionFormula>
    <errorDisplayField>Justificativa__c</errorDisplayField>
    <errorMessage>Preencha a justificativa.</errorMessage>
</ValidationRule>
