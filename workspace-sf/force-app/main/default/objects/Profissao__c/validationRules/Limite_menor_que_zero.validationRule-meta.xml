<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Limite_menor_que_zero</fullName>
    <active>true</active>
    <description>O Limite de capital máximo não pode ser menor que 0 (zero)</description>
    <errorConditionFormula>Limite_de_capital_maximo__c &lt; 0 || 
(ISBLANK(Limite_de_capital_maximo__c) ||
	ISNULL(Limite_de_capital_maximo__c))</errorConditionFormula>
    <errorDisplayField>Limite_de_capital_maximo__c</errorDisplayField>
    <errorMessage>O Limite de capital máximo não pode ser menor que 0 (zero)</errorMessage>
</ValidationRule>
