<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidacaoGaruParentesco</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL( TipoBeneficiario__c , &quot;Nome do beneficiário&quot;), 
OR( 
ISPICKVAL(GrauParentesco__c,&quot;&quot;) 
) 
)</errorConditionFormula>
    <errorDisplayField>GrauParentesco__c</errorDisplayField>
    <errorMessage>Grau de parentesco não informado</errorMessage>
</ValidationRule>
