<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ValidarObrigatoriedadeProdutoCanalPapel</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISBLANK(Produto__c),
    ISBLANK(CanalDistribuicao__c),
    ISBLANK(Papel__c)
)</errorConditionFormula>
    <errorMessage>Preencha um dos campos Produto comercial, Canal ou Papel</errorMessage>
</ValidationRule>
