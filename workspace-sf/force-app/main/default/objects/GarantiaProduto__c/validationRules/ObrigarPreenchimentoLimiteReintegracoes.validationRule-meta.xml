<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ObrigarPreenchimentoLimiteReintegracoes</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    INCLUDES(TipoReintegracao__c,&apos;Vigência&apos;),
    ISBLANK(LimiteReintegracoes__c) 
)</errorConditionFormula>
    <errorDisplayField>LimiteReintegracoes__c</errorDisplayField>
    <errorMessage>Preencha o limite de reintegrações</errorMessage>
</ValidationRule>
