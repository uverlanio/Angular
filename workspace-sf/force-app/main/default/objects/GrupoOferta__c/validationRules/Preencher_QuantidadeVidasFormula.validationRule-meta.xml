<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Preencher_QuantidadeVidasFormula</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
					ISPICKVAL(TipoQuantidadeVidas__c, &apos;Formula&apos;),
				  ISBLANK(QuantidadeVidas__c)
	)</errorConditionFormula>
    <errorDisplayField>QuantidadeVidas__c</errorDisplayField>
    <errorMessage>Preencha o campo &apos;Quantidade de vidas fórmula&apos; quando o Grupo da oferta for &apos;Fórmula&apos;</errorMessage>
</ValidationRule>
