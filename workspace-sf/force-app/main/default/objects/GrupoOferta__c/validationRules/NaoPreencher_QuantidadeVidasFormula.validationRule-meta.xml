<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NaoPreencher_QuantidadeVidasFormula</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
					ISPICKVAL(TipoQuantidadeVidas__c, &apos;Quantidade fixa&apos;),
				 NOT(ISBLANK(QuantidadeVidas__c))
	)</errorConditionFormula>
    <errorDisplayField>QuantidadeVidas__c</errorDisplayField>
    <errorMessage>Não preencha o campo &apos;Quantidade de vidas fórmula&apos; quando o Grupo da oferta for &apos;Quantidade fixa&apos;</errorMessage>
</ValidationRule>
