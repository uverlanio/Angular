<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NaoPreencher_QuantidadeVidasNumero</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
					ISPICKVAL(TipoQuantidadeVidas__c, &apos;Formula&apos;),
				 NOT(ISNULL(QuantidadeVidasNumero__c))
	)</errorConditionFormula>
    <errorDisplayField>QuantidadeVidasNumero__c</errorDisplayField>
    <errorMessage>Não preencha o campo &apos;Quantidade de vidas número&apos; quando o Grupo da oferta for &apos;Fórmula&apos;</errorMessage>
</ValidationRule>
